<div data-section-id="{{ section.id }}" class="index-blog-post-section">
  {% comment %} <div class="container"> {% endcomment %}
    <div class="block widget blog-posts last_widget">
      {% if section.settings.title != blank %}
      <h1 class="page-title">
        <strong role="heading" aria-level="2">{{ section.settings.title | escape }}</strong>
      </h1>
      {% endif %}
      {%- assign blog = blogs[section.settings.blog] -%}

      <div class="post-items carousel-main" role="tree" data-carousel-main data-flickity='{
          "adaptiveHeight": false,
          "contain": true,
          "prevNextButtons": true,
          "wrapAround": true,
          "pageDots": false,
          "groupCells" : "100%",
          "lazyLoad": true,
          "cellAlign" : "left",
          "arrowShape":  {"x0": 10, "x1": 60, "y1": 45, "x2": 60, "y2": 35, "x3": 20}
        }'>
        {% for article in blog.articles limit: section.settings.post_limit %}
        <div role="treeitem"
          class="carousel-cell equal-height col-lg-4 col-md-4 col-sm-12">
          <div class="post-item">
            <div class="item-wrapper">
              <!-- Image -->
              <div class="post-image">
                <a href="{{ article.url }}" class="d-block"><img src="{{ article.image | img_url: '300x300' }}"
                    alt="{{ article.title }}" /></a>
              </div>

              <!-- Title -->
              <div class="post-title">
                <h3>
                  <a href="{{ article.url }}">{{ article.title | truncate: 28 }}</a>
                </h3>
              </div>

              <!-- Metadata -->
              <div class="post-data">
                {% if blog.comments_enabled? %}
                <span class="post-comments">
                  <span
                    class="count no-comment">{{ article.comments_count }}</span>
                </span>
                {% endif %}

                {% if section.settings.blog_show_date %}
                <span class="create-date material-icons-access_time">
                  <time>{{ article.published_at | time_tag: format: 'date' }}</time>
                </span>
                {% endif %}
              </div>
              <a href="{{ article.url }}" class="post-button">
                <span>Read More</span>
              </a>

            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  {% comment %} </div> {% endcomment %}
</div>


